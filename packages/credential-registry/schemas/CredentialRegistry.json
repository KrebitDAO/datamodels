{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CredentialRegistry",
  "description": "The [[CredentialRegistry]] holds the list of claimed [[ClaimedCredentials]] and the [[VerifiableCredentials]] issued by the user",
  "type": "object",
  "properties": {
    "claimed": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CeramicDocId"
      }
    },
    "issued": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CeramicDocId"
      }
    }
  },
  "definitions": {
    "CeramicDocId": {
      "type": "string",
      "pattern": "^ceramic://.+(\\?version=.+)?",
      "maxLength": 150
    }
  },
  "additionalProperties": false
}
