{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IssuedCredentials",
  "description": "The [[IssuedCredentials]] holds the list of [[VerifiableCredential]] issued by the user",
  "type": "object",
  "properties": {
    "issued": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CeramicDocId"
      }
    }
  },
  "definitions": {
    "CeramicDocId": {
      "type": "string",
      "pattern": "^ceramic://.+(\\?version=.+)?",
      "maxLength": 150
    }
  },
  "additionalProperties": false
}
