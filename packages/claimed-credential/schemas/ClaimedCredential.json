{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClaimedCredential",
  "description": "A [[ClaimedCredential]] represents a specific, factually-oriented claim that could be the Id and CredentialSubject of a [[VerifiableCredential]]",
  "type": "object",
  "properties": {
    "did": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "typeSchema": {
      "type": "string"
    },
    "value": {
      "type": "object"
    },
    "encrypted": {
      "$ref": "#/definitions/JWE"
    },
    "verifiableCredentials": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CeramicDocId"
      }
    }
  },
  "required": ["did", "type"],
  "additionalProperties": true,
  "definitions": {
    "CeramicDocId": {
      "type": "string",
      "pattern": "^ceramic://.+(\\?version=.+)?",
      "maxLength": 150
    },
    "JWE": {
      "type": "object",
      "title": "JWE",
      "properties": {
        "protected": { "type": "string" },
        "iv": { "type": "string" },
        "ciphertext": { "type": "string" },
        "tag": { "type": "string" },
        "aad": { "type": "string" },
        "recipients": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "header": {
                "type": "object",
                "properties": {
                  "alg": { "type": "string" },
                  "iv": { "type": "string" },
                  "tag": { "type": "string" },
                  "epk": { "type": "object" },
                  "kid": { "type": "string" }
                },
                "required": ["alg", "iv", "tag"]
              },
              "encrypted_key": { "type": "string" }
            },
            "required": ["header", "encrypted_key"]
          }
        }
      },
      "required": ["protected", "iv", "ciphertext", "tag"]
    }
  }
}
